<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meetle.lauresoft.meetle" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MeetleTheme" >

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/MeetleTheme.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".activities.DaysActivity"
            android:label="@string/app_name"
            android:theme="@style/MeetleTheme.NoActionBar">
        </activity>

        <activity
            android:name=".activities.EventActivity"
            android:label="@string/app_name"
            android:theme="@style/MeetleTheme.EventActivity">
        </activity>

    </application>

</manifest>
